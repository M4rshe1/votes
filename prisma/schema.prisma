generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  votes Vote[]
  role  String  @default("USER")
}

model Vote {
  id               String     @id @default(cuid())
  user             User       @relation(fields: [userId], references: [id])
  userId           String
  title            String
  items            VoteItem[]
  usersCanAddItems Boolean    @default(false)
}

model VoteItem {
  id          String @id @default(cuid())
  vote        Vote   @relation(fields: [voteId], references: [id])
  voteId      String
  title       String
  description String
  count       Int    @default(0)
  gmaps       String
}
